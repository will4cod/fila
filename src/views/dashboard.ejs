<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href='/stylesheets/style-global.css'>
    <link rel="stylesheet" href='/stylesheets/style-header.css'>
    <link rel="stylesheet" href='/stylesheets/style-dashboard.css'>
    <link rel="stylesheet" href='/stylesheets/style-modal.css'>
    <title>Dashboard</title>
</head>
<body>

    <%- include('partials/_header.ejs') %>
    <p class="lead mb-3">Ola <%- name %></p>

    <main class="conteudo-principal">
        <section class="controle">
            <section class="grafico">
                <img src="/image/grafico.jpg" alt="">
            </section>

            <section class="fila">
                <%- include('controle/controle.ejs') %>
            </section>
        </section>

        <section class="acoes">

            <div class="card-acao">
                    <img src="/image/add.png" alt="Adicionar pedido" class="addPedidoLogo">
                    <h2 class="addPedidoLink">Adicionar pedido</h2>
            </div>

            <div class="card-acao">
                <img src="/image/settings.png" alt="Controle fila" class="controleFilaLogo">
                <h2 class="controleFilaLink">Controle fila</h2>
            </div>

            <div class="card-acao">
                <img src="/image/central-de-atendimento.png" alt="Mudar guiche" class="alterarGuicheLogo">
                <h2 class="alterarGuicheLink">Alterar guiche</h2>
            </div>
            
        </section>
  </main>

  <div id="modalAddPedidoContainer" class="modalAddPedidoContainer">
      <div class="modalAddPedido">
        <button class="fechar">X</button>
        <%- include('modals/add_pedido_modal.ejs') %>
      </div>
  </div>

  <div id="modalControleFilaContainer" class="modalControleFilaContainer">
    <div class="modalControleFila">
      <button class="fechar">X</button>
      <%- include('modals/controle_fila_modal.ejs') %>
    </div>
</div>

    <div id="modalAlterarGuicheContainer" class="modalAlterarGuicheContainer">
    <div class="modalAlterarGuiche">
      <button class="fechar">X</button>
      <%- include('modals/alterar_guiche_modal.ejs') %>
    </div>
    </div>  

  <script src="/js/dashboard.js"></script>
  
</body>
</html>